#!/bin/bash

CONFFILES="buildconf.mk"

kconfig/config.sh menuconfig

for f in $CONFFILES; do
    CURFILES="genconfig/$f.default genconfig/$f"
    diff $CURFILES 2> /dev/null
    if [ "$?" -ne "0" ]; then
        cp -i $CURFILES
    else
        echo "genconfig/$f already has the default configuration"
    fi
done
