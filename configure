#!/bin/bash

CONFFILES="buildconf.mk kernelconf.mk targetconf.mk"

for f in $CONFFILES; do
    CURFILES="config/$f.default config/$f"
    diff $CURFILES 2> /dev/null
    if [ "$?" -ne "0" ]; then
        cp -i $CURFILES
    else
        echo "config/$f already has the default configuration"
    fi
done
